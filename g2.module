    'type' => MENU_CALLBACK,
  );

  $items[G2\PATHINITIAL . '/%'] = array(
    'page callback' => 'theme',
    'page arguments' => array('g2_initial', 2),
    'access arguments' => array(G2\PERMVIEW),
    'type' => MENU_CALLBACK,
